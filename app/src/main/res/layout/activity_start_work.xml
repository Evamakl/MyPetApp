<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start_work">


    <ImageButton
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:scrollbarTrackHorizontal="@color/black"
        android:scrollbarTrackVertical="@android:drawable/editbox_background"
        android:scrollbars="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="35dp"
        android:id="@+id/TOOLBAR"
        android:layout_marginTop="15dp"
        android:layout_marginRight="350dp"
        />

    <TextView
        android:id="@+id/EXIST_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם: "
        android:textColor="#3F51B5"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/EXIST_MAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מייל:"
        android:textColor="#3F51B5"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EXIST_NAME"
        app:layout_constraintVertical_bias="0.053" />
</androidx.constraintlayout.widget.ConstraintLayout>