<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EDE7F6"
    android:backgroundTint="#E3F2FD"
    android:foregroundTint="#FFF3E0"
    android:orientation="vertical">


    <TextView
        android:id="@+id/first_title"
        android:layout_width="322dp"
        android:layout_height="91dp"
        android:background="#EDE7F6"
        android:backgroundTint="#E3F2FD"
        android:foregroundTint="#FFF3E0"
        android:text="ידיעון"
        android:textColor="#0F022C"
        android:textSize="50sp"
        android:translationX="50dp"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/second_title"
        android:layout_width="324dp"
        android:layout_height="84dp"
        android:text="על מה תרצה לדעת?"
        android:textColor="#0F022C"
        android:textSize="20sp"
        android:translationX="60dp"
        android:translationY="40dp" />

    <Button
        android:id="@+id/vaccin_button"
        android:layout_width="170dp"
        android:layout_height="77dp"
        android:text="חיסונים"
        android:textColor="#0F022C"
        android:textSize="35sp"
        android:translationX="220dp"
        android:translationY="20dp" />

    <Button
        android:id="@+id/food_button"
        android:layout_width="170dp"
        android:layout_height="77dp"
        android:text="אוכל"
        android:textColor="#0F022C"
        android:textSize="40sp"
        android:translationX="20dp"
        android:translationY="-55dp" />

    <Button
        android:id="@+id/shampo_button"
        android:layout_width="170dp"
        android:layout_height="77dp"
        android:text="סוג שמפו מומלץ"
        android:textColor="#0F022C"
        android:textSize="20sp"
        android:translationX="220dp"
        android:translationY="-50dp" />

    <Button
        android:id="@+id/walk_button"
        android:layout_width="170dp"
        android:layout_height="77dp"
        android:text="מספר טיולים מומלץ"
        android:textSize="20sp"
        android:translationX="20dp"
        android:translationY="-127dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:text="אחורה"
        android:textSize="25sp"
        android:translationX="10dp"
        android:translationY="30dp" />

</LinearLayout>
