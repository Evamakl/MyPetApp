<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EDE7F6"
    android:backgroundTint="#E3F2FD"
    android:foregroundTint="#FFF3E0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vaccines_info"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:text="מידע על חיסונים וטיפולים:"
        android:textSize="30sp"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/vaccinesP"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:text="חיסון פרוו"
        android:textSize="28sp"
        android:translationX="10dp"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/vaccinesPEX"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text="חיסון כנגד מחלת גורים שכיחה וקטלנית הניתן אך ורק לגורים בגיל 6 שבועות."
        android:textSize="22sp"
        android:translationX="10dp"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/vaccinesM"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="חיסון משושה:"
        android:textSize="28sp"
        android:translationX="10dp"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/vaccinesM_EX"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:text="חיסון המכיל הגנה ל-6 מחלות מדבקות (ביניהן גם פרוו) המסוכנות לגורים ולכלבים בוגרים. החיסון ניתן לראשונה בגיל 6-8 שבועות ויש לחזור עליו פעמיים נוספות במרווחים של שבועיים(סך הכל סדרה של 3 זריקות משושה). לאחר מכן, או כאשר מדובר בכלב מעל גיל שנה, החיסון ניתן אחת לשנה."
        android:textSize="22sp"
        android:translationX="10dp"
        android:translationY="20dp" />

    <Button
        android:id="@+id/continuebt"
        android:layout_width="124dp"
        android:layout_height="73dp"
        android:text="המשך..."
        android:translationX="10dp"
        android:translationY="100dp" />

    <Button
        android:id="@+id/backbt"
        android:layout_width="124dp"
        android:layout_height="73dp"
        android:text="אחורה"
        android:translationX="270dp"
        android:translationY="80dp" />


</LinearLayout>
