<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Personal_File">

        <include
            android:id="@+id/include"
            layout="@layout/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/dog_image"
        android:layout_width="132dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        app:layout_constraintBottom_toTopOf="@+id/time_outside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dog_birth_day"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:text="תאריך לידה:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/gender"
        app:layout_constraintStart_toStartOf="@+id/gender"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="471dp" />

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="74dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:text="שם:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/dog_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="296dp" />

    <TextView
        android:id="@+id/dog_type"
        android:layout_width="69dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:text="סוג:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dog_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dog_name"
        app:layout_constraintTop_toBottomOf="@+id/dog_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/time_outside"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginStart="252dp"
        android:text="זמני יציאה לטיול:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/city"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="@+id/city"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="607dp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="69dp"
        android:layout_height="26dp"
        android:layout_marginTop="44dp"
        android:text="עיר:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dog_birth_day"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="@+id/dog_birth_day"
        app:layout_constraintTop_toBottomOf="@+id/dog_birth_day"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="65dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:text="מין:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dog_type"
        app:layout_constraintTop_toBottomOf="@+id/dog_type" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="@+id/dog_image"
        app:layout_constraintEnd_toEndOf="@+id/dog_image"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/dog_image"
        app:layout_constraintTop_toTopOf="@+id/dog_image"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
