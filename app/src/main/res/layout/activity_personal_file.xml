<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_personal_file_scene"
    tools:context="Personal_File">

    <ImageView
        android:id="@+id/dog_image"
        android:layout_width="132dp"
        android:layout_height="110dp"
        android:translationX="250sp"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        android:translationY="25sp" />

    <TextView
        android:id="@+id/dog_birth_day"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:text="תאריך לידה:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationX="170sp"
        android:translationY="275sp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="69dp"
        android:layout_height="26dp"
        android:text="עיר:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationX="100sp"
        android:translationY="350sp" />

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="58dp"
        android:layout_height="32dp"
        android:text="שם:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationX="35sp"
        android:translationY="150sp" />

    <TextView
        android:id="@+id/dog_type"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:text="סוג:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationX="-20sp"
        android:translationY="200sp" />

    <TextView
        android:id="@+id/time_outside"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:text="זמני יציאה לטיול:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationX="-125sp"
        android:translationY="400sp" />

    <TextView
        android:id="@+id/Sex"
        android:layout_width="58dp"
        android:layout_height="31dp"
        android:text="מין:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationX="-195sp"
        android:translationY="250sp" />

</LinearLayout>